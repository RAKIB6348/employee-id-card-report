<odoo>
    <template id="employee_id_card_template">
        <t t-call="web.html_container">
            <t t-set="company_address">826, East Shewrapara, Rokeya Sarani, Dhaka-1216</t>
            <t t-foreach="docs" t-as="employee">

                <!-- Styles -->
                <style>
                    .employee-id-card {
                        width: 320px;
                        height: 500px;
                        border: 2px solid #2C3E50;
                        border-radius: 16px;
                        background: linear-gradient(to bottom, #ffffff, #ecf0f1);
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                        box-sizing: border-box;
                        padding: 20px;
                        text-align: center;
                        position: relative;
                        display: flex;
                        flex-direction: column;
                        justify-content: space-between;
                        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    }
                    .employee-id-card h3 {
                        margin: 0;
                        font-size: 20px;
                        color: #2C3E50;
                        font-weight: bold;
                        border-bottom: 1px solid #bdc3c7;
                        padding-bottom: 10px;
                    }
                    .employee-photo {
                        width: 120px;
                        height: 120px;
                        border-radius: 50%;
                        overflow: hidden;
                        border: 3px solid #3498db;
                        margin: 20px auto 10px;
                    }
                    .employee-photo img {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }
                    .employee-info {
                        font-size: 14px;
                        color: #34495e;
                        line-height: 1.6;
                        margin-top: 10px;
                    }
                    .employee-info p {
                        margin: 6px 0;
                    }
                    .employee-footer {
                        font-size: 12px;
                        color: #7f8c8d;
                        margin-top: 10px;
                        padding-top: 10px;
                        border-top: 1px solid #bdc3c7;
                    }
                    .employee-footer a {
                        color: #2980b9;
                        text-decoration: none;
                    }
                </style>

                <!-- Card -->
                <div class="page">
                    <div class="employee-id-card">
                        <div>
                            <h3>Employee ID Card</h3>

                            <!-- Image -->
                            <div class="employee-photo">
                                <t t-if="employee.image_1920">
                                    <img t-att-src="'data:image/png;base64,' + (employee.image_1920 and employee.image_1920.decode('utf-8') or '')" />
                                </t>
                                <t t-else="">
                                    <img src="/web/static/src/img/placeholder.png" />
                                </t>
                            </div>

                            <!-- Info -->
                            <div class="employee-info">
                                <p><strong>Name:</strong> <t t-esc="employee.name" /></p>
                                <p><strong>Position:</strong> <t t-esc="employee.job_title" /></p>
                                <p><strong>Email:</strong> <t t-esc="employee.work_email" /></p>
                                <p><strong>Phone:</strong> <t t-esc="employee.work_phone" /></p>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="employee-footer">
                            <p><strong>Address:</strong> <t t-esc="company_address" /></p>
                            <p>
                                <strong>Website:</strong>
                                <a t-att-href="'https://' + employee.company_id.website" target="_blank">
                                    <t t-esc="employee.company_id.website" />
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>




